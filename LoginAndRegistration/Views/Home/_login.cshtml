@model LoginUser
<form action="/Login" method="post">
            <div class = "form-group row mb-3">
                <label for="LogEmail" class="col-sm-2 col-form-label text-start">Email : </label>
                <div class ="col-sm-10">
                    <input  asp-for = "LogEmail" class="form-control">
                </div>           
                <span asp-validation-for="LogEmail" class = "text-danger"></span>
            </div>
            <div class = "form-group row mb-3">
                <label for="LogPassword" class="col-sm-2 col-form-label text-start">Password : </label>
                <div class ="col-sm-10">
                    <input  asp-for = "LogPassword" class="form-control">
                </div>           
                <span asp-validation-for="LogPassword" class = "text-danger"></span>
            </div>
            <div class="form-group row mb-3">
                <div class="col-sm-10 offset-sm-2 text-start ">
                    <button type="submit" class="btn btn-info">Login</button>
                </div>
            </div>
        </form>