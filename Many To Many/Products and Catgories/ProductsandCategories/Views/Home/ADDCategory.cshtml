@{
    ViewData["Title"] = "Home Page";
}

@model Association
<div class="text-center">
    <h1><a href="/">Products</a> |<a href="/categories">Categories</a> </h1>
    <div class="row">
        @foreach (Category a in ViewBag.AllCategories)
        {
            <option value="@a.CategoryId">@a.Name</option>
        }
        <div class="col-6">
            @* Add Product to Catgory *@
            <form action="/AddProd/@ViewBag.CategoryId" method="post">
                <div class="form-group">
                    <label for="ProductId">Product</label>
                    <select asp-for="ProductId" class="form-control">
                        <option value="NULL">----</option>
                        @foreach (var c in ViewBag.AllProducts)
                        {
                            <option value="@c.ProductId">@c.Name</option>
                        }

                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-warning" />
                </div>
            </form>
        </div>


        <div class="col-6">
        @foreach (Category z in ViewBag.AllCategories)
{
            @foreach (Association c in z.MyProducts)
            {
            <p>@c.Product.Name</p>
            }
            }
        </div>

    </div>   
</div>   








  